            <!-- /sidebar -->

        <div style="padding-left: 17%; text-align:left" class="container">
            <h1 class="well">Password Change</h1>
            <div class="col-lg-12 well">
                <div class="row">
                    <form method="post"  enctype="application/x-www-form-urlencoded" name="/api/changePassword" action="javascript:;" onsubmit="validateForm(this)">
                        <div class="row">
                            <div class=" form-group col-sm-12">
                                <label>Old Password</label>
                                <input name = "old_password" required type="password" placeholder="Old Password " class="form-control">
                            </div>
                        </div> 
                        <div class="row">
                                <div class=" form-group col-sm-6">
                                    <label>Password</label>
                                    <input name="password" type="password" required placeholder="Enter Password " class="form-control">
                                </div>
                                <div class=" form-group col-sm-6">
                                    <label>Repeat Password</label>
                                    <input name = "confirm_password" required type="password" placeholder="Repeat Password " class="form-control">
                                </div>
                            </div>
                            <button  class="btn btn-lg btn-info">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

