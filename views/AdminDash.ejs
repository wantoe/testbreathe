<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <!-- Bootstrap Core CSS -->
    <script src="http://code.jquery.com/jquery-1.11.2.min.js"></script>
    <link href="../public/css/bootstrap.min.css" rel="Stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="../public/css/sidebar.css" rel="stylesheet">
    <link href="../public/css/ClinicianDash.css" rel="stylesheet">

    <link rel="stylesheet" href="../public/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.11.1/bootstrap-table.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.11.1/bootstrap-table.min.js"></script>

</head>
<body>
<div class="wrapper">
    <div class="row row-offcanvas row-offcanvas-left">
        <!-- sidebar -->
        <div class="column col-sm-2 col-xs-1 sidebar-offcanvas" id="sidebar">
            <ul class="nav" id="menu">
                <li style="text-align: center"><a href="#"><i class="fa fa-tachometer" aria-hidden="true"></i>
                    <span class="collapse in hidden-xs">Breathe Hero</span></a></li>
                <li><a href="/AdminDash"><span class="collapse in hidden-xs">Dashboard</span> <i style="float: right;"
                                                                                                 class="fa fa-list"></i> </a></li>
                <li><a href="/AdminSignup"><span class="collapse in hidden-xs">Sign up</span> <i style="float: right;"
                                                                                                 class="fa fa-list"></i>
                </a></li>
                <li><a href="/logout"><span class="collapse in hidden-xs">Logout</span> <i style="float:right;"
                                                                                           class="fa fa-sign-out"
                                                                                           aria-hidden="true"></i>
                </a></li>
            </ul>
        </div>
        <!-- /sidebar -->

        <div class="container">
        <h1 style="text-align: center; font-size: 38">Pending Clinicians</h1>
            <table id="clinician-table"
                   data-toggle="table"
                   data-url="api/PendingClinicians"
                   data-height="400"
                   data-width="200px"
                   data-side-pagination="server"
                   data-pagination="true"
                   data-page-list="[5, 10, 20]"
                   data-search="true"
                   data-toolbar="#toolbar"
                   data-show-refresh="true"
                   data-show-toggle="true"
                   data-show-columns="true"
                   data-show-export="true"
                   data-show-pagination-switch="true"
            >
                <thead>
                <tr>
                    <th data-field="state" data-checkbox="true"></th>
                    <th data-field="username">Username</th>
                    <th data-field="email">Email</th>
                    <th data-field="first_name">First Name</th>
                    <th data-field="last_name">Last Name</th>
                    <th data-field="title">Title</th>
                    <th data-field="clinic">Clinic</th>
                </tr>
                </thead>
            </table>

            <div style=" margin:auto; text-align: center ; float:right; bottom: 0;">
                <button class="btn btn-success" onclick="accept()">Create Accounts </button>
                <button value="submit" class="btn btn-danger" onclick="decline()" >Delete Accounts </button>
            </div>
        </div>

        <div class = "container"> 
            <h1 style="text-align: center; font-size: 38">Account Checking</h1>
                <table id="accounts-table"
                    data-toggle="table"
                    data-url="api/AllAccounts"
                    data-height="400"
                    data-width="200px"
                    data-side-pagination="server"
                    data-pagination="true"
                    data-page-list="[5, 10, 20]"
                    data-search="true"
                    data-toolbar="#toolbar"
                    data-show-refresh="true"
                    data-show-toggle="true"
                    data-show-columns="true"
                    data-show-export="true"
                    data-show-pagination-switch="true"
                >   
                    <thead>
                        <tr>
                            <th data-field="state" data-checkbox="true"></th>
                            <th data-field="user_id">User ID</th>
                            <th data-field="username">Username</th>
                            <th data-field="email">Email</th>
                            <th data-field="first_name">First Name</th>
                            <th data-field="last_name">Last Name</th>
                        </tr>
                    </thead>
                </table>
                <div style=" margin:auto; text-align: center ; float:right; bottom: 0;">
                        <button value="submit" class="btn btn-danger" onclick="view()" >View Account </button>
                </div>
        </div>
    </div>
</div>



<script type="text/javascript" src ="../public/js/AdminDash.js"></script>

<script>
    function accept(){
        var usernames = [];

    table = document.getElementById("clinician-table");
    tr = table.getElementsByClassName("selected");

    usernames = new Array();

    for(i = 0; i < tr.length; i++) {
        td = tr[i].getElementsByTagName("td");
        usernames.push(td[1].textContent);
    }

    $.post('/api/ValidateClinicians',{users: usernames}, function(err,res){
        console.log(err);
    });
        //location.reload();

    console.log(tr);
    }

    function decline(){
        var usernames = [];

        table = document.getElementById("clinician-table");
        tr = table.getElementsByClassName("selected");

        usernames = new Array();

        for(i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td");
            usernames.push(td[1].textContent);
        }

        $.post('/api/DeclineClinicians',{users: usernames});
            //location.reload();

        console.log(tr);
    }

    //this function needs to post a request to "login" as a different user.
    function view(){
        var user_id;

        table = document.getElementById("accounts-table");
        test = table.getElementsByClassName("selected");
        td = test[0].getElementsByTagName("td");

        user_id = td[1].textContent;

        console.log(user_id);

        $.post('/api/loginAs',{user_id: user_id});
            //location.reload();
    }

</script>