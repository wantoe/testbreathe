    <link rel="stylesheet" href="../public/css/submitdataform.css">


    <!--- Header --->


</head>
<body>
<div class="wrapper">
    <div class="row row-offcanvas row-offcanvas-left">
        <!-- sidebar -->
        <div class="column col-sm-2 col-xs-1 sidebar-offcanvas" id="sidebar" >
            <ul class="nav" id="menu">
                <li style="text-align: center"><a href="#"><i class="fa fa-tachometer" aria-hidden="true"></i>
                    <span class="collapse in hidden-xs">Breathe Hero</span></a></li>
                <li><a href="/dashboard"><span class="collapse in hidden-xs">Dashboard</span> <i style="float: right;"
                                                                                      class="fa fa-list"></i> </a></li>
                <li><a href="#"> <span class="collapse in hidden-xs">Submit Data</span> <i style="float: right;"
                                                                                     class="fa fa-paperclip"></i></a>
                </li>
                <li><a href="/ParentSignUp"> <span class="collapse in hidden-xs">Parent Signup</span> <i style="float: right;"
                                                                                       class="fa fa-refresh"></i></a>
                </li>
                <li><a href="/logout"><span class="collapse in hidden-xs">Logout</span> <i style="float:right;"
                                                                                           class="fa fa-sign-out"
                                                                                           aria-hidden="true"></i>
                </a></li>
            </ul>
        </div>
        <!-- /sidebar -->



        <form class="cf" action="/api/userdata" method="post" onsubmit="sent">
            <h2> Submit Data </h2>
            <h3>Seperate multiple inputs using commas</h3>
            <div >
                <input name = 'time' type="datetime-local" id="input-name" placeholder="Session Start" min="2015-01-01T00:00:00" required="required">
                <input name='duration' type="number" id="input-email" placeholder="Duration" min ="1" required="required">
                <input name='successful_breaths'  id="input-subject" placeholder="Successful Breaths" required="required">
                <input name='unsuccessful_time'  id="input-subject" placeholder="Unsuccessful Breaths (Time)"  required="required">
                <input name='unsuccessful_pressure'  id="input-subject" placeholder="Unsuccessful Breaths (Pressure)" required="required">
                <input name='average_exhl_pressure' step="any" type="number" id="input-subject" placeholder="Average Exhalation Pressure" min ="1" required="required">
                <input name='average_exhl_time' step="any" type="number" id="input-subject" placeholder="Average Exhalation time" min ="1" required="required">
                <input name='successful_huff_coughs'   id="input-subject" placeholder="Successful Huff Coughs" required="required">


            </div>

            <input type="submit" value="Submit" id="input-submit">
        </form>

        <div id = "submitted"></div>

    </div>
</div>

<!-- main right col -->

<!-- /main -->
</body>
<script>
    function  sent() {
        document.getElementById('submitted').innerHTML = '<p> Submitted! <p>';
    }

</script>

</html>